<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<!DOCTYPE properties SYSTEM "http://java.sun.com/dtd/properties.dtd">
<properties>
    <comment>
        Config for JDBC Knowledge Base
        This file may be used as a template for your own connection setup or used to test
        integration with your own database setup
    </comment>
    <entry key="driver">oracle.jdbc.driver.OracleDriver</entry>
    <entry key="url">jdbc url here</entry>
    <entry key="user">user</entry>
    <entry key="password">pass</entry>
    <!-- auto commit is set false here as an indicator to the user of this file. Regardless of the setting here-->
    <!-- JdbcknowledgeBase will set it to false in code in order to prevent a partial-->
    <!-- store() and thus corrupt data. JdbcKnowledgeBase is designed to manage all storage for you. -->
    <!-- If that doesn't suit you roll you own implementation!! -->

    <entry key="autoCommit">false</entry>

    <entry key="operations.table">ARIADNE_OPERATIONS</entry>
    <entry key="operations.id">OPERATION_ID</entry>
    <entry key="operations.lho">LH_OPERAND_OWNER_ID</entry>
    <entry key="operations.op">OPERATOR_ID</entry>
    <entry key="operations.rho">RH_OPERAND_OWNER_ID</entry>
    <!-- removing this entry will prevent writing of the description field to the DB-->
    <entry key="operations.desc">DESCRIPTION</entry>
    <!-- this entry allows for a means of truncating the description entry so as to not overflow the DB field-->
    <entry key="operations.desc.max.length">4000</entry>


    <entry key="operand_owners.table">ARIADNE_OPERAND_OWNERS</entry>
    <entry key="operand_owners.id">OPERAND_OWNER_ID</entry>
    <entry key="operand_owners.class_name">OPERAND_OWNER_CLASS_NAME</entry>
    <entry key="operand_owners.input">OPERAND_OWNER_INPUT</entry>


    <entry key="operators.table">ARIADNE_OPERATORS</entry>
    <entry key="operators.id">OPERATOR_ID</entry>
    <entry key="operators.class_name">OPERATOR_CLASS_NAME</entry>
    <entry key="operators.desc">DESCRIPTION</entry>

</properties>
